#!/usr/local/bin/ruby -ws

$v    ||= false
$h    ||= false
$help ||= false

if $h or $help then
  help = [
          "autotest [options]",
          nil,
          "options:",
          "\t-h",
          "\t-help\t\tYou're looking at it.",
          nil,
          "\t-v\t\tBe verbose.",
          "\t\t\tPrints files that autotest doesn't know how to map to",
          "\t\t\ttests.",
         ]
  STDERR.puts help.join("\n")
  exit 1
end

require 'autotest'
style = Autotest.autodiscover << "autotest"
mod = style.join("_")
puts "loading #{mod}"
require mod
Object.const_get(style.map {|s| s.capitalize}.join).run
